{
  "manifest_version": 3,
  "name": "JobCap - Summarizes Job Ads",
  "version": "1.0",
  "description": "Extracts and summarizes job information from sites like Indeed and LinkedIn.",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "host_permissions": [
    "https://*.indeed.com/*",
    "https://*.indeed.ca/*",
    "https://www.linkedin.com/jobs/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*",
        "https://*.indeed.ca/*",
        "https://www.linkedin.com/jobs/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
